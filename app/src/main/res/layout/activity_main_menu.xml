        android:text="v.0.2 beta  sdw  er fe r ev ev e ve v e c c w dcw c wc wc w cw c d c d    vf vv swg i gwi fgie gvie"
        android:id="@+id/wellcomTextBox"
        android:layout_alignParentTop="true"
